<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/foto_veterinario"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/dogcat"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/nome_veterinario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Veterinário"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_marginStart="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@+id/foto_veterinario"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="descrição:......."
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:maxLines="4"
        app:layout_constraintTop_toBottomOf="@+id/nome_veterinario"
        app:layout_constraintStart_toEndOf="@id/foto_veterinario"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/contato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="contato:......."
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/descricao"
        app:layout_constraintStart_toEndOf="@+id/foto_veterinario"/>

</androidx.constraintlayout.widget.ConstraintLayout>